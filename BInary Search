import java.util.Scanner;
import java.util.Arrays;

class Main {

    public static int binarysearch(int[] arr, int key) {
        int left = 0;
        int right = arr.length - 1; //note how array.length is used

        while (right >= left) {
            int mid = left + (right - left) / 2;

            if (arr[mid] == key) {
                return mid; 
            }
            if (arr[mid] < key) {
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }

        return -1; 
    }

    public static void main(String[] args) {
        Scanner obj = new Scanner(System.in);

        System.out.print("Enter the number of elements in the array: ");
        int max = obj.nextInt();

        int[] arr = new int[max];
        System.out.println("Enter " + max + " integers:");

        for (int i = 0; i < max; i++) {
            arr[i] = obj.nextInt();
        }

        System.out.print("Enter the key to be searched: ");
        int key = obj.nextInt();

        Arrays.sort(arr);

        int result = binarysearch(arr, key);

        if (result == -1) {
            System.out.println("The key was not found in the array.");
        } else {
            System.out.println("The key was found at index: " + result);
        }

        obj.close();
    }
}
